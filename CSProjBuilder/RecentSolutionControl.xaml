<UserControl x:Class="CSProjBuilder.RecentSolutionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSProjBuilder"
             mc:Ignorable="d"  Background="#484848"
             d:DesignHeight="40" d:DesignWidth="240" Width="230" Height="40" Margin="0,5,0,0">
	<Button Background="Transparent" HorizontalAlignment="Left" Width="230" HorizontalContentAlignment="Left" Click="Button_Click">
		<StackPanel Margin="10,0" HorizontalAlignment="Left">
			<Label Foreground="#e5e5e5" x:Name="ProjectNameLabel" Height="20" FontSize="14" Padding="0">Project Name</Label>
			<Label Foreground="#cdcdcd" x:Name="ProjectLocationLabel" Height="20" Padding="0" FontSize="12">C:\ProjectLocation</Label>
		</StackPanel>
	</Button>
</UserControl>
